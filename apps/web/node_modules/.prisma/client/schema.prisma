// Prisma schema for Family Meal Planner MVP

generator client {
  provider = "prisma-client-js"
}

generator client_web {
  provider = "prisma-client-js"
  output   = "../../apps/web/node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum InventoryLocation {
  FRIDGE
  PANTRY
}

enum ShoppingCategory {
  PRODUCE
  DAIRY
  MEAT_FISH
  PANTRY
  FROZEN
  OTHER
}

model Household {
  id                    String   @id @default(cuid())
  name                  String
  code                  String   @unique
  pinHash               String
  familyFriendlyDefault Boolean  @default(true)
  minimizeWasteDefault  Boolean  @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  users          User[]
  whitelistSites WhitelistSite[]
  recipes        Recipe[]
  weeklyPlans    WeeklyPlan[]
  inventoryItems InventoryItem[]
  sessions       HouseholdSession[]
}

model User {
  id          String   @id @default(cuid())
  householdId String
  name        String
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  household Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
}

model WhitelistSite {
  id          String   @id @default(cuid())
  householdId String
  domain      String
  name        String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  household Household @relation(fields: [householdId], references: [id], onDelete: Cascade)

  @@unique([householdId, domain])
}

model Recipe {
  id               String   @id @default(cuid())
  householdId      String
  title            String
  imageUrl         String?
  sourceUrl        String
  sourceDomain     String
  servings         Int      @default(4)
  isFavorite       Boolean  @default(false)
  isFamilyFriendly Boolean  @default(true)
  needsReview      Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  household       Household          @relation(fields: [householdId], references: [id], onDelete: Cascade)
  ingredients     RecipeIngredient[]
  steps           RecipeStep[]
  weeklyPlanItems WeeklyPlanItem[]

  @@unique([householdId, sourceUrl])
  @@index([householdId, title])
}

model RecipeIngredient {
  id        String   @id @default(cuid())
  recipeId  String
  position  Int
  line      String
  createdAt DateTime @default(now())

  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@index([recipeId, position])
}

model RecipeStep {
  id        String   @id @default(cuid())
  recipeId  String
  position  Int
  text      String
  createdAt DateTime @default(now())

  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@index([recipeId, position])
}

model WeeklyPlan {
  id          String   @id @default(cuid())
  householdId String
  weekStart   DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  household         Household          @relation(fields: [householdId], references: [id], onDelete: Cascade)
  items             WeeklyPlanItem[]
  shoppingListItems ShoppingListItem[]

  @@unique([householdId, weekStart])
}

model WeeklyPlanItem {
  id           String   @id @default(cuid())
  weeklyPlanId String
  recipeId     String
  servings     Int      @default(4)
  createdAt    DateTime @default(now())

  weeklyPlan WeeklyPlan @relation(fields: [weeklyPlanId], references: [id], onDelete: Cascade)
  recipe     Recipe     @relation(fields: [recipeId], references: [id], onDelete: Restrict)

  @@unique([weeklyPlanId, recipeId])
  @@index([weeklyPlanId])
}

model InventoryItem {
  id          String            @id @default(cuid())
  householdId String
  name        String
  location    InventoryLocation @default(PANTRY)
  isActive    Boolean           @default(true)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  household Household @relation(fields: [householdId], references: [id], onDelete: Cascade)

  @@unique([householdId, name, location])
  @@index([householdId, location])
}

model ShoppingListItem {
  id           String           @id @default(cuid())
  weeklyPlanId String
  name         String
  category     ShoppingCategory @default(OTHER)
  quantityText String?
  isBought     Boolean          @default(false)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  weeklyPlan WeeklyPlan @relation(fields: [weeklyPlanId], references: [id], onDelete: Cascade)

  @@index([weeklyPlanId, category])
}

model HouseholdSession {
  id          String   @id @default(cuid())
  householdId String
  tokenHash   String   @unique
  createdAt   DateTime @default(now())
  lastUsedAt  DateTime @default(now())
  expiresAt   DateTime
  userAgent   String?

  household Household @relation(fields: [householdId], references: [id], onDelete: Cascade)

  @@index([householdId])
  @@index([expiresAt])
}
